package com.salestax;

import java.util.List;

public class Receipt {

	private List<Product> products;
	private Tax basicTax;
	private Tax importDutyTax;
	


public Receipt(List<Product> products,Tax basicTax, Tax importDutyTax) {
	this.products=products;
	this.basicTax=basicTax;
	this.importDutyTax=importDutyTax;
}

public printReceipt() {
	
	double totalSalesTax=0.0;
	double totalPrice;
	
	for(int i=1;i<products.size();i++) {
		Product product=products.get(i);
		double productTax=basicTax.calculateTax(product)+importDutyTax.calculateTax(product);
		double productPriceWithTax=productTax+product.getPrice();
		
		
		 System.out.println(product.getName() + ": " + String.format("%.2f", productPriceWithTax));
	}
	
	
	
}




}